'use strict';

// MODULES //

var fs = require( 'fs' );
var path = require( 'path' );
var rimraf = require( 'rimraf' );


// MAIN //

/**
* Main execution sequence.
*
* @private
*/
function main() {
	var dir;

	// Resolve the `@stdlib` scoped node_modules directory:
	dir = path.resolve( __dirname, '..', '@stdlib' );

	// Remove the installed node_modules:
	rimraf( dir, done );

	/**
	* Callback invoked upon removing a directory.
	*
	* @private
	* @param {Error} [error] - error object
	*/
	function done( error ) {
		if ( error ) {
			console.error( 'Error: %s', error.message );
		}
	}
}

main();